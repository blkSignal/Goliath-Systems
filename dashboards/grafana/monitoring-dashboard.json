{
  "dashboard": {
    "id": null,
    "title": "Goliath Systems - System Monitoring & Health",
    "tags": ["monitoring", "system-health", "performance", "threat-detection"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "System Health Overview",
        "type": "stat",
        "targets": [
          {
            "query": "SELECT 'healthy' as status, 100 as uptime, 85.2 as memory, 23.1 as cpu",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 80},
                {"color": "red", "value": 95}
              ]
            }
          }
        },
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Memory Usage Trend",
        "type": "timeseries",
        "targets": [
          {
            "query": "SELECT ts, memory_percent FROM system_metrics WHERE ts >= now() - INTERVAL 1 HOUR ORDER BY ts",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {
              "drawStyle": "line",
              "fillOpacity": 10,
              "lineWidth": 2
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 80},
                {"color": "red", "value": 95}
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 4
        }
      },
      {
        "id": 3,
        "title": "CPU Utilization",
        "type": "timeseries",
        "targets": [
          {
            "query": "SELECT ts, cpu_percent FROM system_metrics WHERE ts >= now() - INTERVAL 1 HOUR ORDER BY ts",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {
              "drawStyle": "line",
              "fillOpacity": 10,
              "lineWidth": 2
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 4
        }
      },
      {
        "id": 4,
        "title": "Active Detections",
        "type": "stat",
        "targets": [
          {
            "query": "SELECT count() as active FROM detector_results WHERE ts >= now() - INTERVAL 1 HOUR",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 100},
                {"color": "red", "value": 500}
              ]
            }
          }
        },
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 0
        }
      },
      {
        "id": 5,
        "title": "Threat Detection Rate",
        "type": "timeseries",
        "targets": [
          {
            "query": "SELECT ts, count() as threats FROM detector_results WHERE score >= 0.7 AND ts >= now() - INTERVAL 24 HOUR GROUP BY ts ORDER BY ts",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {
              "drawStyle": "bars",
              "fillOpacity": 80
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 12
        }
      },
      {
        "id": 6,
        "title": "Service Status",
        "type": "table",
        "targets": [
          {
            "query": "SELECT service_name, status, last_check, response_time FROM service_health ORDER BY last_check DESC",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "auto"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 12
        }
      },
      {
        "id": 7,
        "title": "Performance Metrics",
        "type": "stat",
        "targets": [
          {
            "query": "SELECT avg(response_time) as avg_response, max(response_time) as max_response FROM api_metrics WHERE ts >= now() - INTERVAL 1 HOUR",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1000},
                {"color": "red", "value": 5000}
              ]
            }
          }
        },
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 8,
        "title": "Error Rate",
        "type": "timeseries",
        "targets": [
          {
            "query": "SELECT ts, count() as errors FROM system_logs WHERE level = 'ERROR' AND ts >= now() - INTERVAL 1 HOUR GROUP BY ts ORDER BY ts",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {
              "drawStyle": "line",
              "fillOpacity": 10,
              "lineWidth": 2
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 20
        }
      },
      {
        "id": 9,
        "title": "Network Traffic",
        "type": "timeseries",
        "targets": [
          {
            "query": "SELECT ts, bytes_sent, bytes_recv FROM network_metrics WHERE ts >= now() - INTERVAL 1 HOUR ORDER BY ts",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {
              "drawStyle": "line",
              "fillOpacity": 10,
              "lineWidth": 2
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 20
        }
      }
    ],
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "refresh": "10s"
  }
}
